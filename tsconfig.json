{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./",
    "outDir": "./build",
    "target": "ES2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": false,
    "allowJs": true,
    "paths": {
      "@amaui/style-react": [
        "./packages/amaui-style-react/src"
      ],
      "@amaui/style-react/*": [
        "./packages/amaui-style-react/src/*"
      ],
      "@amaui/ui-react": [
        "./packages/amaui-ui-react/src"
      ],
      "@amaui/ui-react/*": [
        "./packages/amaui-ui-react/src/*"
      ]
    }
  },
  "exclude": [
    "build",
    "node_modules"
  ]
}
